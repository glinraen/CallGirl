<p id="notice"><%= notice %></p>

<h1>Listing Servers</h1>


<% form_tag servers_path, :method => 'get' do %>
 <p>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
  </p>
  <% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Username</th>
      <th>Password</th>
      <th>Privkey</th>
      <th>Pubkey</th>
      <th>Key</th>
      <th>Ip</th>
      <th>Hostname</th>
      <th>Cluster</th>
      <th>Ipaddr</th>
      <th>Type</th>
      <th>Machine</th>
      <th>Cluster</th>
      <th>Virtual?</th>
      <th>Up?</th>
      <th>Criticality</th>
      <th>Priority</th>
      <th>Network</th>
      <th>Manager</th>
      <th>Os</th>
      <th>Devops</th>
      <th>Uptime</th>
      <th>System</th>
      <th>User</th>
      <th>Configuration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.name %></td>
        <td><%= server.username %></td>
        <td><%= server.password %></td>
        <td><%= server.privkey %></td>
        <td><%= server.pubkey %></td>
        <td><%= server.key %></td>
        <td><%= server.ip %></td>
        <td><%= server.hostname %></td>
        <td><%= server.cluster %></td>
        <td><%= server.ipaddr %></td>
        <td><%= server.type %></td>
        <td><%= server.machine_id %></td>
        <td><%= server.cluster_id %></td>
        <td><%= server.virtual? %></td>
        <td><%= server.up? %></td>
        <td><%= server.criticality %></td>
        <td><%= server.priority %></td>
        <td><%= server.network_id %></td>
        <td><%= server.manager_id %></td>
        <td><%= server.os %></td>
        <td><%= server.devops_id %></td>
        <td><%= server.uptime %></td>
        <td><%= server.system_id %></td>
        <td><%= server.user_id %></td>
        <td><%= server.configuration %></td>
        <td><%= link_to 'Show', server %></td>
        <td><%= link_to 'Edit', edit_server_path(server) %></td>
        <td><%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

